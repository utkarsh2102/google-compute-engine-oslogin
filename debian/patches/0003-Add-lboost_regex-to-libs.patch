From: Balint Reczey <balint.reczey@canonical.com>
Date: Mon, 7 Jan 2019 14:15:00 +0700
Subject: Add -lboost_regex to libs

---
 src/Makefile  | 2 +-
 test/Makefile | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

--- a/src/Makefile
+++ b/src/Makefile
@@ -7,7 +7,7 @@
 CXXFLAGS = $(FLAGS)
 
 LDFLAGS = -shared -Wl,-z,defs -Wl,-soname,$(SONAME)
-LDLIBS = -lcurl -ljson-c
+LDLIBS = -lcurl -ljson-c -lboost_regex
 PAMLIBS = -lpam $(LDLIBS)
 
 # Paths which should be overrideable.
--- a/test/Makefile
+++ b/test/Makefile
@@ -9,7 +9,7 @@
 SSHCA_TEST_RUNNER = ./sshca_runner --gtest_output=xml --gtest_filter="SSHCATests.*"
 CPPFLAGS += -I$(TOPDIR)/src/include -I$(TOPDIR)/third_party/include -I/usr/include/json-c -I$(GTEST_DIR) -isystem $(GTEST_DIR)/include
 CXXFLAGS += -g -Wall -Wextra
-LDLIBS = -lcurl -ljson-c -lpthread
+LDLIBS = -lcurl -ljson-c -lpthread -lboost_regex
 
 .PHONY: all clean alltests ping reset
 .PHONY: gtest prowtest non_network_tests network_tests
